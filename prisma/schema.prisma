generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String 
  name String
  role String
  createdAt DateTime @default(now())
}

model Course {
  id String @id @default(uuid())
  title String
  description String
  instrument String
  level String
  schedule String
  capacity Int
}

model Enrollment {
  id String @id @default(uuid())
  studentId String
  courseId String
  enrollmentDate DateTime
  status String
}

model Progress {
  id String @id @default(uuid())
  studentId String
  courseId String
  date DateTime
  evaluation String
  comments String
}

